            <script>
                function setValue(buttonValue){
                    console.log("Hello")
                    
                    if(buttonValue==="firstBanner"){
                        const bannerName = document.getElementById('banner_name')
                        bannerName.value = "First Banner"
                    }else if(buttonValue==="secondBanner"){
                        const bannerName = document.getElementById('banner_name')
                        bannerName.value = "Second Banner"
                    }
                }

                function editValue(bannerId,bannerName,bannerText){
                    document.getElementById('bannerId').value = bannerId
                    document.getElementById('banner_edit_name').value = bannerName
                    document.getElementById('banner_edit_bannerText').value = bannerText
                }

            </script>
