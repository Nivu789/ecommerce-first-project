        <section class="pt-50 pb-50">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 col-lg-10 m-auto">
                        <div class="contact-from-area padding-20-row-col wow FadeInUp">
                            <h3 class="mb-10 text-center">Drop Us a Line</h3>
                            <!-- <p class="text-muted mb-30 text-center font-sm">Lorem ipsum dolor sit amet consectetur.</p> -->
                            <form class="contact-form-style text-center" id="contact-form" action="#">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="input-style mb-20">
                                            <input name="name" placeholder="First Name" type="text" required id="name">
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="input-style mb-20">
                                            <input name="email" placeholder="Your Email" type="email" required id="email">
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="input-style mb-20">
                                            <input name="phone" placeholder="Your Phone" type="tel" required id="phone">
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="input-style mb-20">
                                            <input name="subject" placeholder="Subject" type="text" required id="subject">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="textarea-style mb-30">
                                            <textarea name="message" placeholder="Message" required id="message"></textarea>
                                        </div>
                                        <button class="submit submit-auto-width" type="button"  onclick="validateForm(event)">Send message</button>
                                    </div>
                                </div>
                            </form>
                            
                            <script>
                                function validateForm(event) {
                                    event.preventDefault()
                                    console.log("Coming")
                                    var name = document.getElementById('name').value;
                                    var email = document.getElementById('email').value;
                                    var phone = document.getElementById('phone').value;
                                    var subject = document.getElementById('subject').value;
                                    var message = document.getElementById('message').value;
                            
                                    if (name === "" || email === "" || phone === "" || subject === "" || message === "") {
                                        Swal.fire("All fields must be filled out");
                                        return false;
                                    }else if(name.trim()==""||email.trim()==""||phone.trim()==""||subject.trim()==""||message.trim()==""){
                                        Swal.fire("Please provide something meaningful");
                                    }else if(isNaN(phone) || phone.length !== 10){
                                        Swal.fire("Please provide a valid contact number")
                                    }else if(message.length<10){
                                        Swal.fire("Message should be atleast 10 characters long")
                                    }else{
                                        fetch('/post-contact',{
                                            method:"POST",
                                            headers:{
                                                'Content-Type':'application/json'
                                            },
                                            body:JSON.stringify({
                                                name:name,
                                                email:email,
                                                phone:phone,
                                                subject:subject,
                                                message:message
                                            })
                                        }).then(res=>{
                                            if(res.ok){
                                                console.log("Success")
                                                return res.json()
                                            }else{
                                                console.log("Error")
                                            }
                                        }).then(data=>{
                                            if(data.message=="Done"){
                                                Swal.fire({
                                                
                                                    icon: "success",
                                                    title: "Thank you for contacting us, we will get to you soon",
                                                    showConfirmButton: false,
                                                    timer: 3000
                                                });
                                                setTimeout(() => {
                                                    window.location.href = '/'
                                                }, 3000);
                                            }else{
                                                console.log("Something bad happened")
                                            }
                                        }).catch(err=>{
                                            console.log(err)
                                        })
                                    }
                                   
                                     
                                }
                            </script>
                            <p class="form-messege"></p>
                        </div>
                    </div>
                </div>
            </div>
